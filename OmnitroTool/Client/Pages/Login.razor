@page "/"
<h3>Login</h3>
@inject NavigationManager NavigationManager
@using OmnitroTool.Shared
<form>
    <div class="form-group">
        <label for="exampleInputEmap1il1">Email address</label>
        <input type="email" class="form-control" @bind="pass.email" id="exampleInputEmail1"  aria-describedby="emailHelp" placeholder="Enter email"/>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" @bind-value="pass.pass"  id="password"  placeholder="Password"  />
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="button" class="btn btn-primary " @onclick=onSubmit>Submit</button>
</form>
@if (errorMessage != null)
{
    <p>@errorMessage</p>
}
@code {

    string errorMessage;
    Password pass= new Password();
    void onSubmit()
    {
        
  
        Console.WriteLine("password and email" + pass.pass +" "+ pass.email);
        if (pass.pass == 1 && pass.email.Equals("anwr.esaid@ug.bilkent.edu.tr"))
        {
            NavigationManager.NavigateTo("home");
            
        }
        else
        {
            errorMessage = "The email or password that you have entered is wrong, Please try again";
        }


    }

}
